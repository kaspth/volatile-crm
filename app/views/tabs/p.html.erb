<%= render TabNav::Bar do |bar| %>
  <%= bar.link_to "Dashboard", tab_path,       icon: "home" %>
  <%= bar.link_to "Contacts",  contacts_path,  icon: "users",           count: Current.account.contacts %>
  <%= bar.link_to "Companies", companies_path, icon: "building-office", count: Current.account.companies %>
  <%= bar.link_to "Tasks",     tasks_path,     icon: "pencil-square",   count: Current.account.tasks, threshold: 15 %>

  <%= bar.link_to_if Current.account.plan.pro?, "Reports", reports_path, icon: "chart-bar",
        tooltip: "Reports are only available on the Pro plan." %>

  <%= bar.dropdown "Settings", icon: "cog-6-tooth" do |tab| %>
    <%= tab.link_to "Collaborators", settings_collaborators_path %>
    <%= tab.link_to "Notifications", settings_notifications_path %>
  <% end if Current.user.admin? %>

  <% bar.extra.if Current.account.features.search? do %>
    <%= form_with url: searches_path, method: :get do |form| %>
      <%= form.text_field :query, placeholder: "Search", autocomplete: "off", class: "w-full text-sm border-gray-300 rounded-lg shadow-inner placeholder:text-gray-400" %>
    <% end %>
  <% end %>
<% end %>
